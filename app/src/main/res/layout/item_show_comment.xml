<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"

        android:background="@drawable/shape_oval_score"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/txt_score"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/_10sdp"
        android:id="@+id/txt_title"
        android:textColor="@color/gray_900"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_toLeftOf="@id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_500"
            android:textSize="10sp"
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_user"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_500"
            android:textSize="10sp"
            android:layout_toLeftOf="@id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
  <View
      android:layout_marginBottom="@dimen/_4sdp"
      android:layout_marginTop="@dimen/_4sdp"
      android:background="@color/gray_300"
      android:layout_width="match_parent"
      android:layout_height="1dp"/>
    <TextView
        android:id="@+id/txt_advice"
        android:textSize="@dimen/_8sdp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/gray_900"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_toLeftOf="@id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/gray_300"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textColor="@color/gray_900"
        android:layout_gravity="right"
        android:text="نقاط قوت"
        android:textSize="@dimen/_7sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="11sp"
        android:textColor="@color/green_500"
        android:id="@+id/txt_posotive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/gray_900"
        android:layout_gravity="right"
        android:text="نقاط ضعف"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_7sdp"
        android:textColor="@color/red"
        android:id="@+id/txt_minus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/gray_300"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>