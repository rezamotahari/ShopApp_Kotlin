<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/rltv_chart"
    android:padding="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        app:srcCompat="@drawable/ic_bar_chart"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:id="@+id/img_chart"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/img_chart"
        android:text="@string/chart_price"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/gray_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <View
        android:background="@color/gray_300"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>
    <RelativeLayout
        android:id="@+id/rltv_compare"
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            app:srcCompat="@drawable/ic_bar_chart"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:id="@+id/img_compare"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_compare"
            android:text="@string/compare"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/gray_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>