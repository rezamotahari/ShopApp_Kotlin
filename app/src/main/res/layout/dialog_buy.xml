<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/gray_300" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/buy"
        android:textColor="@color/gray_900"
        android:textSize="@dimen/_10sdp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_wallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_one"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/wallet"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txt_direct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:layout_weight="1"

            android:background="@drawable/shape_txt_two"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/direct"
            android:textColor="@color/green_500"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <RelativeLayout
        android:padding="@dimen/_4sdp"
        android:id="@+id/rltv_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/gray_900"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/txt_buy_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_txt_three"
            android:padding="@dimen/_6sdp"
            android:text="خرید از کیف پول"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />
    </RelativeLayout>

</LinearLayout>