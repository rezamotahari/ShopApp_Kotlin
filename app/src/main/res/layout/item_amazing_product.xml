<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp">

        <com.example.novinshop_project.view.MyImageView
            android:id="@+id/img_amazing_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            app:viewAspectRatio="1.0" />

        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:ellipsize="end"
            android:lines="2"
            android:id="@+id/txt_title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/gray_900"
            android:textSize="@dimen/_8sdp" />
        <RelativeLayout
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_percent"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_free_price"
                    android:textColor="@color/gray_700"
                    android:textSize="@dimen/_9sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/gray_500"
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_amazing"
            style="@style/CustomProgressBarAmazing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textSize="@dimen/_8sdp"
                android:textColor="@color/gray_700"
                android:id="@+id/txt_count"
                android:layout_gravity="right|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layoutDirection="ltr"
                android:textSize="@dimen/_8sdp"
                android:id="@+id/txt_time"
                android:layout_gravity="left|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>